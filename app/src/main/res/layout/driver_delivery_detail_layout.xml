<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:theme="@style/AppTheme"
    android:layout_weight="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            style="@style/CustomFront.Title"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="Overview "/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            style="@style/CustomFront.Black"
            android:text="Description: "
            android:layout_weight="1"
            android:textSize="14dp"/>

        <TextView
            style="@style/CustomFront.Black"
            android:id="@+id/delivery_description"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Joanne want to deliver tong shui"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:text="Send To: "
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            />

        <TextView
            android:id="@+id/delivery_send_to_location"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomFront.Black"
            android:textSize="14dp"
            android:text="UTP Kampar"/>
    </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp">

        <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Send From: "/>

        <TextView
            android:id="@+id/delivery_send_from_location"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomFront.Black"
            android:textSize="14dp"
            android:text="UTP Kampar"/>
    </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp">

        <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Price: "/>

        <TextView
            android:id="@+id/delivery_offered_price"
            style="@style/CustomFront.Black"
            android:textSize="14dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 150.00"/>
    </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp">

            <TextView
                style="@style/CustomFront.Title"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Item Detail "/>
        </TableRow>

    <!-- Luggage -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp">

        <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Item Type: " />

        <TextView
            android:id="@+id/delivery_type"
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="weight: " />

        <TextView
            android:id="@+id/delivery_weight"
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10kg"/>
    </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="10dp">

                <TextView
                    style="@style/CustomFront.Title"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Sender / Receiver  "/>
            </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Sender name: "/>

        <TextView
            android:id="@+id/delivery_sender_name"
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soh Teck Shem"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Contact Number: " />

        <TextView
            android:id="@+id/delivery_sender_contact"
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01123179921"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">


    <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Receiver name: " />

        <TextView
            android:id="@+id/delivery_receiver_name"
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joanne Wong"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp">


    <TextView
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:text="Contact Number: "/>

        <TextView
            android:id="@+id/delivery_receiver_contact"
            android:layout_weight="1"
            android:textSize="14dp"
            style="@style/CustomFront.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01123179921"/>
    </TableRow>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_accept"
                android:background="@color/colorBackground"
                style="@style/CustomFront.ButtonText"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="Accept"/>
</TableLayout>



</LinearLayout>
</ScrollView>