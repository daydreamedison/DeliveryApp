<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_weight="1"
    android:theme="@style/AppTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- Description ========================-->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/CustomFront.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: "
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/delivery_description"
                        style="@style/CustomFront.Black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joanne want to deliver tong shui"
                        android:textSize="14dp" />
                </LinearLayout>
            </TableRow>

            <!-- Send To ========================-->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        style="@style/CustomFront.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send To: "
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/delivery_send_to_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFront.Black"
                        android:textSize="14dp"
                        android:text="UTP Kampar"/>
                </LinearLayout>
            </TableRow>

            <!-- Send From ========================-->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFront.Black"
                        android:textSize="14dp"
                        android:text="Send From: " />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/delivery_send_from_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFront.Black"
                        android:textSize="14dp"
                        android:text="UTP Kampar"/>
                </LinearLayout>
            </TableRow>

            <!-- Price ========================-->
            <TableRow
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        style="@style/CustomFront.Black"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/delivery_offered_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFront.Black"
                        android:textSize="14dp"
                        android:text="RM 150.00"/>
                </LinearLayout>
            </TableRow>

            <!-- Break Line =============-->
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomFront.Title"
                android:textSize="16dp"
                android:text="Item Detail "
                android:padding="3dip" />


            <!-- Parcel ========== -->
            <TableRow
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parcel_weight_section">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="item type: "
                        style="@style/CustomFront.Black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFront.Black"
                        android:textSize="14dp"
                        android:text="10kg"/>
                </LinearLayout>
            </TableRow>


            <!-- Document  -->
            <TableRow
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/document_weight_section">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="item type: "
                        style="@style/CustomFront.Black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFront.Black"
                    android:textSize="14dp"
                    android:text="document"/>
                </LinearLayout>
            </TableRow>

            <!-- break line =========-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/CustomFront.Title"
                android:textSize="16dp"
                android:text="Sender/Receiver Information "
                android:padding="3dip" />

            <!-- Sender Name =================-->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:text="Sender name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFront.Black"
                    android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/delivery_sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomFront.Black"
                        android:textSize="14dp"
                        android:text="Soh Teck Shem"/>
                </LinearLayout>
            </TableRow>

            <!-- Contact number=======================-->
            <TableRow
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number: "
                    style="@style/CustomFront.Black"
                    android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/delivery_sender_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomFront.Black"
                    android:textSize="14dp"
                    android:text="01123179921"/>
                </LinearLayout>
            </TableRow>

            <!-- Receiver name ===================-->
            <TableRow
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receiver name: "
                    style="@style/CustomFront.Black"
                    android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/delivery_receiver_name"
                    android:layout_width="wrap_content"
                    style="@style/CustomFront.Black"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:text="Joanne Wong"/>
                </LinearLayout>
            </TableRow>

            <!-- Contact Number -->
            <TableRow
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number: "
                    style="@style/CustomFront.Black"
                    android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/delivery_receiver_contact"
                    android:layout_width="wrap_content"
                    style="@style/CustomFront.Black"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:text="01123179921"/>
                </LinearLayout>
            </TableRow>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_order_accept"
                android:background="@color/colorBackground"
                style="@style/CustomFront.ButtonText"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="Accept"/>

        </TableLayout>



    </LinearLayout>

</ScrollView>