<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wong.joanne.deliveryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Driver.DriverMainActivity"
            android:label="@string/driver_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Driver.test"
            android:label="@string/driver_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
        android:name=".Driver.DeliveryDetailActivity"
        android:label="Detail"
        android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Driver.ItemPickUpActivity"
            android:label="Delivery"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Driver.DeliveringActivity"
            android:label="Delivery"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Customer.CustomerMainActivity"
            android:label="@string/customer_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Customer.DeliveryFormActivity"
            android:label="Address Form"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".Customer.VendorPriceListAcivity"
            android:label="Price List"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".Customer.OrderConfirmationActivity"
            android:label="Order"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".Customer.OrderSuccessPage"
            android:label="Order"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>